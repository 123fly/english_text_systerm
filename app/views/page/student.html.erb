<div class="return">
  <button onclick="returnLandingPage()">注销</button>
</div>
<div align="center">

  <%= form_tag("/student_finding") do %>

      <dl>

        <%= text_field_tag(:name) %>
        <%= submit_tag("查找") %>
      </dl>
  <% end %>
  <% if @scores != nil %>
      <p>
        姓名：<%= @scores.name %>
      </p>

      <p>
        沟通能力：<%= @scores.ability_to_communicate %>
      </p>

      <p>
        职业素养：<%= @scores.professional_quality %>
      </p>

      <p>
        学习能力： <%= @scores.ability_to_learn %>
      </p>

      <p>
        沟通能力：<%= @scores.speech_ability %>
      </p>

      <p>
        综合能力：<%= @scores.comprehensive_ability %>
      </p>
  <% end %>
</div>
