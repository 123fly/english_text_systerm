<div class="return">
  <button onclick="returnLandingPage()">注销</button>
</div>
<div align="center">

  <%= form_tag("/student_finding") do %>

      <dl>

        <%= text_field_tag(:name) %>
        <%= submit_tag("查找") %>
      </dl>
  <% end %>
  <% if @scores != nil %>
      <table>
        <% @scores.each do |score| %>
            <tr>
              <td>姓名：<%= score.name %></td>
              <td>沟通能力：<%= score.ability_to_communicate %></td>
              <td>职业素养：<%= score.professional_quality %></td>
              <td>学习能力：<%= score.ability_to_learn %></td>
              <td>沟通能力：<%= score.speech_ability %></td>
              <td>综合能力：<%= score.comprehensive_ability %></td>
              <td>第<%= score.number %>周评分</td>
            </tr>
        <% end %>
      </table>
  <% end %>
</div>
