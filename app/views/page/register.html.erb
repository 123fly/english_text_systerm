<div align="center">
    <%= form_tag("/register_user") do %>
        <%= radio_button_tag(:m, "manager") %>
        <%= label_tag("管理员" ) %>
        <%= radio_button_tag(:s, "student") %>
        <%= label_tag("学员") %>
        <br>
        <%= label_tag( "Name:") %>
        <%= text_field_tag(:name) %>

        <br>
        <%= label_tag("ID:") %>
        <%= text_field_tag(:id) %>
        <br>
        <%= label_tag("Password:") %>
        <%= password_field_tag(:pass) %>
        <br>
        <%= label_tag("Email:") %>
        <%= text_field_tag(:email ) %>
        <br>
        <%= submit_tag("注册") %>
    <% end %>
  </div>

